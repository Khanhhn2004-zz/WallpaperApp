<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           


    <FrameLayout
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/dialog_loading_set_wallpaper_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/rounded_corners"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_15sdp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color_bottom_sheet">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_24pt_bold"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/loading"
                    android:textColor="@color/text_color_title"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/v_loading"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_300sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/set_wallpaper"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
         