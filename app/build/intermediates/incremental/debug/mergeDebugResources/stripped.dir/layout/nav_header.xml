<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_border"
        android:paddingTop="@dimen/_30sdp" android:tag="layout/nav_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/custom_bg_arrow"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_download"
            android:layout_width="0dp"
            android:textColor="@color/text_color_drawer"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/download"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_document_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="0dp"
            android:textColor="@color/text_color_drawer"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/favorites"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_heart_drawer"
            app:layout_constraintBottom_toTopOf="@id/tv_download"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_drawer"
            android:drawablePadding="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/home"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_home_drawer"
            app:layout_constraintBottom_toTopOf="@id/tv_favorite"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_privicy"
            android:layout_width="0dp"
            android:textColor="@color/text_color_drawer"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/home"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_document_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_download" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         