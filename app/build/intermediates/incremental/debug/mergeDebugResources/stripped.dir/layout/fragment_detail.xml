<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_selected" android:tag="layout/fragment_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/im_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/custom_bg_arrow"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/custom_bg_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_info_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/im_back"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/im_back" />

        <ImageView
            android:id="@+id/im_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_70sdp"
            android:background="@drawable/custom_bg_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_share_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/im_set_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/custom_bg_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_paint_roller"
            app:layout_constraintBottom_toTopOf="@id/im_heart"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/im_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/custom_bg_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_download"
            app:layout_constraintBottom_toTopOf="@id/im_share"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/im_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/custom_bg_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_heart"
            app:layout_constraintBottom_toTopOf="@id/im_download"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/im_no_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/im_no_internet_ill"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_no_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:fontFamily="@font/inter_24pt_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_16sdp"
            android:text="@string/you_are_offline"
            android:textColor="@color/text_color_title"
            android:textSize="17sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/im_no_download"
            app:layout_constraintRight_toRightOf="@id/im_no_download"
            app:layout_constraintTop_toBottomOf="@id/im_no_download" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         