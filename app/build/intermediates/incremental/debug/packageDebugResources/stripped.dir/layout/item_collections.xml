<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp" android:tag="layout/item_collections_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_im_collections"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintDimensionRatio="3:1.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/im_collections"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vie_img" />

                <TextView
                    android:id="@+id/tv_name_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_36sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_24pt_bold"
                    android:maxLines="1"
                    android:text="@string/colorful"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@id/im_collections"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/im_collections"
                    app:layout_constraintTop_toTopOf="@id/im_collections" />

                <TextView
                    android:id="@+id/tv_sie_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_18pt_regular"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@string/_2690_wallpapers"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_name_collection"
                    app:layout_constraintRight_toRightOf="@id/tv_name_collection"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_collection" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
         