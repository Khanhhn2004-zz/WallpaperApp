<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           


    <LinearLayout
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/custom_bg_selected_language"
        android:id="@+id/v_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" android:tag="layout/item_language_0" xmlns:android="http://schemas.android.com/apk/res/android">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_flag"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/vie_img" />

        <TextView
            android:textColor="@color/text_color_title"
            android:paddingVertical="@dimen/_20sdp"
            android:id="@+id/tv_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/vietnamese"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_check_circle_24" />
    </LinearLayout>


         