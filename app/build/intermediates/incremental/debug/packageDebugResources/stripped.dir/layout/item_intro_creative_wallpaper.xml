<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/item_intro_creative_wallpaper_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_im_wallpaper"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_340sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_15sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/im_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/im_creative" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_content_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:textSize="18sp"
            android:textColor="@color/text_color_content_1"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_im_wallpaper" />

        <TextView
            android:id="@+id/tv_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:fontFamily="@font/inter_24pt_bold"
            android:textSize="25sp"
            android:textColor="@color/text_color_title"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content_top" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         