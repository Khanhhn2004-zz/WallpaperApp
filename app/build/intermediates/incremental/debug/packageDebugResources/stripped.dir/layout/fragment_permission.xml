<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_color" android:tag="layout/fragment_permission_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/im_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:contentDescription="@string/permission_picture"
            android:scaleType="centerCrop"
            android:src="@drawable/im_permission"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_24pt_bold"
            android:gravity="center|bottom"
            android:paddingHorizontal="20dp"
            android:textColor="@color/text_color_title"
            android:text="@string/use_your_photo_as_wallpaper"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im_permission" />

        <TextView
            android:id="@+id/tv_content_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:gravity="center|top"
            android:textColor="@color/text_color_content_1"
            android:paddingHorizontal="@dimen/_40sdp"
            android:text="@string/allow_wallpaper_to_access_photos_on_this_device"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_permission" />

        <TextView
            android:id="@+id/tv_allow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/custom_bg_btn"
            android:fontFamily="@font/inter_24pt_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_15sdp"
            android:text="@string/allow"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/tv_may_be"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_may_be"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_67sdp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/inter_24pt_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_15sdp"
            android:text="@string/skip"
            android:textColor="@color/text_color_title"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         