<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_color"
        android:paddingTop="@dimen/_30sdp" android:tag="layout/fragment_filter_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="@drawable/custom_bg_arrow"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/inter_24pt_bold"
            android:text="@string/filters"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/im_back" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:paddingRight="@dimen/_30sdp"
            android:text="@string/donit_see_what_you_need_add_some_filters_to_narrow_down_your_results"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_filter" />


        <TextView
            android:id="@+id/tv_latest_uploads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="@string/latest_uploads"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_lastest_uploads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_latest_uploads"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_latest_uploads" />

        <TextView
            android:id="@+id/tv_newest_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="@string/newest_collection"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_latest_uploads" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_newest_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_newest_collection"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_newest_collection" />

        <TextView
            android:id="@+id/tv_most_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="@string/most_downloaded"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_newest_collection" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_most_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_most_downloaded"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_most_downloaded" />

        <TextView
            android:id="@+id/tv_exclusive_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="@string/exclusive_first"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_most_downloaded" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_exclusive_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_exclusive_first"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_exclusive_first" />

        <TextView
            android:id="@+id/tv_sort_by_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="@string/sort_by_size"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_exclusive_first" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_sort_by_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_sort_by_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sort_by_size" />

        <TextView
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_67sdp"
            android:background="@drawable/custom_bg_btn_apply"
            android:gravity="center"
            android:paddingVertical="@dimen/_15sdp"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         