<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <FrameLayout
        android:fitsSystemWindows="true"
        android:windowSoftInputMode="adjustPan"
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#807A7A7A" android:tag="layout/dialog_rate_us_one_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/custom_bg_dialog"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:id="@+id/im_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_fill"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_content_rate_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="@string/enjoying_chat_app"
                android:textSize="18sp"
                android:fontFamily="@font/inter_24pt_bold"
                android:textStyle="bold"
                android:textColor="@color/text_color_title"
                app:layout_constraintTop_toBottomOf="@id/im_heart" />


            <TextView
                android:id="@+id/tv_content_rate_us_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_content_1"
                android:text="@string/how_would_you_rate_our_service"
                app:layout_constraintTop_toBottomOf="@id/tv_content_rate_us" />


            <RatingBar
                android:id="@+id/view_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stepSize="0.1"
                style="?android:attr/ratingBarStyleIndicator"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:progressTint="#FFC720"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginVertical="@dimen/_20sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_content_rate_us_2" />


            <TextView
                android:id="@+id/tv_allow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/customs_bg_btn_rate_us"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_bold"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/rate_now"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/view_star"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

         